            <td>@Html.LabelFor(m => m.StartDate)@Html.EditorFor(m => m.StartDate)</td>
   
        </tr>
        <tr> 
            <td>@Html.LabelFor(m => m.EndDate)@Html.EditorFor(m => m.EndDate)</td>
   
        </tr>*@
        <tr> 
            <td>@Html.LabelFor(m => m.StartKm)@Html.EditorFor(m => m.StartKm)</td>
   
        </tr>
        <tr> 
            <td>@Html.LabelFor(m => m.EndKm)@Html.EditorFor(m => m.EndKm)</td>
   
        </tr>
        <tr> 
            <td>@Html.LabelFor(m => m.Price)@Html.EditorFor(m => m.Price)</td>
        </tr>
        <tr> 
            <td style="display: none">@Html.LabelFor(m => m.CarDriverPriceMainId)@Html.EditorFor(m => m.CarDriverPriceMainId)</td>
   
        </tr>
    </table>

    }
</div>
