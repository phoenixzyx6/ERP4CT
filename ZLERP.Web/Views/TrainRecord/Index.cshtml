@model ZLERP.Model.TrainRecord 
@section HeaderSection{
<script src="@Url.Content("~/Scripts/Views/TrainRecord/TrainRecord.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        $(function () {
            trainrecordIndexInit({storeUrl:'@Url.Action("Find")'});
        });
</script>
}
<div id="TrainRecordGrid"></div>
<div id="TrainRecordForm" class="mvcform" style="display:none;">
@using (Html.BeginForm())
{@Html.ValidationSummary()
<table class="mvcform"> 
    <tr> 
        <td colspan="2" style=" color:Red;">@Html.TextBoxFor(m => m.ID, new {@class = "text", style="display:none;"})*员工培训结束后请及时给予培训评价及给受训人员打分</td>
   
    </tr>
    <tr> 
        <td>@Html.LabelFor(m => m.UserID)@Html.AutoComplete("UserID", "TrueName", "Combo", "User", "ID", "TrueName", "")</td>
        <td style=" padding-left:15px;">@Html.LabelFor(m=>m.TrainingID)@Html.AutoComplete("TrainingID","TrainName","Combo","Training","ID","TrainName","" )</td>
   
    </tr>
    <tr> 
        <td>@Html.LabelFor(m=>m.BeginDate)@Html.EditorFor(m=>m.BeginDate)</td>
        <td style=" padding-left:15px;">@Html.LabelFor(m=>m.EndDate)@Html.EditorFor(m=>m.EndDate)</td>
   
    </tr>
    <tr> 
        <td>@Html.LabelFor(m=>m.TrainCost)@Html.EditorFor(m => m.TrainCost)</td>
        <td style=" padding-left:15px;">@Html.LabelFor(m=>m.TrainCredit)@Html.DicComboBoxFor(m => m.TrainCredit,DicEnum.TrainCredit)</td>
    </tr>
</table>
}
</div>