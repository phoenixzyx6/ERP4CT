<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ZLERP.Model" assembly="ZLERP.Model">
	<class name="ZLERP.Model.CarCategory, ZLERP.Model" table="CarCategory" lazy="true"
    dynamic-insert="true" dynamic-update="true" batch-size="30" optimistic-lock="version">
		<id name="ID" column="CarCategoryID">
		 	<generator class="assigned" />
		</id>
		<version name="Version" column="Version" />
		<property name="CarCategoryName" column="CarCategoryName" />
		<property name="LifeCycle" column="LifeCycle" />
    <property name="BuildTime" column="BuildTime" update="false"/>
    <property name="Builder" column="Builder" update="false"/>
    <property name="ModifyTime" column="ModifyTime" insert="false"/>
    <property name="Modifier" column="Modifier" insert="false"/>
    <property name="Lifecycle" column="Lifecycle" /> 
		<bag name="Cars" lazy="true" batch-size="30" inverse="true" >
			<key column="CarCategoryID"></key>
			<one-to-many class="Car"></one-to-many>
		</bag>
		<bag name="CarCategoryItems" lazy="true" batch-size="30" inverse="true" >
			<key column="CarCategoryID"></key>
			<one-to-many class="CarCategoryItem"></one-to-many>
		</bag>
	</class>
</hibernate-mapping>